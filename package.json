{
  "name": "@codingnomad/mui-components",
  "version": "0.0.2",
  "description": "Material UI based component library",
  "repository": "github:codingnomad-com/mui-components",
  "author": "Manuel Bachl | Coding Nomad <manuel@coding-nomad.com> (https://coding-nomad.com)",
  "homepage": "https://coding-nomad.com",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "jsnext:main": "dist/index.js",
  "scripts": {
    "start": "yarn doc:dev",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "test": "playwright test",
    "test:show-report": "npx playwright show-report",
    "test:chromium": "playwright test --project=chromium",
    "test:debug": "playwright test --debug",
    "test:codegen": "playwright codegen",
    "commit": "git-cz",
    "release": "standard-version",
    "release:tags": "git push --follow-tags origin main",
    "build": "yarn build:es && yarn compile:ts",
    "build:es": "esbuild src/index.ts --loader:.svg=file --loader:.png=file --bundle --outfile=dist/bundle.js",
    "compile:ts": "tsc --build --pretty -v && tsc-alias -p tsconfig.json",
    "prepublishOnly": "rm -rf dist && mkdir dist && yarn run lint && yarn run build && yarn release && yarn release:tags",
    "doc:dev": "start-storybook -p 6006 ",
    "doc:build": "build-storybook --output-dir docs ",
    "doc:deploy": "npm run doc:build && gh-pages -d docs",
    "update:storybook": "npx sb@latest upgrade"
  },
  "dependencies": {
    "moment": "^2.29.1",
    "react": "^18.2.0",
    "react-scripts": "^5.0.1",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@codingnomad/eslint-config-cn": "^0.1.8",
    "@codingnomad/ts-utilities": "^0.0.4",
    "@playwright/test": "^1.31.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/components": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.16",
    "@types/node": "^18.14.0",
    "@types/react": "^18.0.28",
    "@types/validator": "^13.7.12",
    "commitizen": "^4.3.0",
    "concurrently": "^7.6.0",
    "cross-spawn": "^7.0.3",
    "esbuild": "^0.17.10",
    "eslint": "^8.34.0",
    "eslint-plugin-storybook": "^0.6.11",
    "gh-pages": "^5.0.0",
    "glob": "^8.1.0",
    "inflected": "^2.1.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "prop-types": "^15.8.1",
    "react-is": "^18.2.0",
    "read-pkg-up": "^9.1.0",
    "replace": "^1.2.2",
    "rimraf": "^4.1.2",
    "standard-version": "^9.5.0",
    "storybook": "^6.5.16",
    "tsc-alias": "^1.8.2",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "which": "^3.0.0",
    "yargs-parser": "^21.1.1"
  },
  "files": [
    "dist"
  ],
  "license": "Unlicense",
  "engines": {
    "node": ">=8.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{src,docs}/**/*.{js,json,css,jsx,ts,tsx} *.js": [
      "pretty-quick --staged",
      "npm run stylelint",
      "eslint --fix --quiet --ignore-path .gitignore",
      "git add"
    ]
  },
  "keywords": [
    "Material UI",
    "react",
    "Remix",
    "components",
    "component library",
    "library"
  ],
  "publishConfig": {
    "access": "public"
  }
}
